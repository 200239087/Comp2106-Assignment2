    <fieldset class="form-group">
        <label for="element" class="control-label col-md-2">Magic Element:</label>
        <input class="col-md-2" type="text" id="element" name="element" required>
    </fieldset>
    <fieldset class="form-group">
        <label for="summary" class="control-label col-md-2">Summary:</label>
        <textarea type="text" cols="100" rows="4" id="summary" name="summary"></textarea>
    </fieldset>
    <button class="offset-2 btn btn-primary">Submit</button>
</form>

