<% include ../shared/header.ejs %>
<% race extends characters %>

<h1><%= title %></h1>

<form method="post" id="add">
    <fieldset class="form-group">
        <label for="name" class="control-label col-md-2">Name:</label>
        <input class="col-md-2" type="text" id="name" name="name" required>
    </fieldset>
    <fieldset class="form-group">
        <label for="race" class="control-label col-md-2">Race:</label>
        <% for (let i = 0; i < race.length; i++) { %>
        <select class="col-md-2" id="race" name="race" required>
                <option value=""></option>
                <option value="<%= race[i].name %>">race[i].name</option>


                <!-- <option value="Angel">Angel</option>
                <option value="Fallen">Fallen</option>
