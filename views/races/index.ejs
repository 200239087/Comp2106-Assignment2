<% include ../shared/header.ejs %>

    <h1>List of Races</h1>

        <a href="/races/add">Add a New Race</a>

    <table class="table table-striped table-hover">
        <tr>
            <td>Name</td>
            <td>Actions</td>
        </tr>
        <% for(let i = 0; i < race.length; i++){ %>
            <tr>
                <td><%= race[i].name %></td>
                    <td>
                        <a class="btn btn-info" href="/races/edit/<%= race[i]._id %>">Edit</a>
                        <a class="btn btn-danger" href="/races/delete/<%= race[i]._id %>" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                    </td>
            </tr>
        <% } %>
    </table>
  
