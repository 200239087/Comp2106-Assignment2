<% include shared/header.ejs %>

    <h1>Login</h1>

    <form method="post">
        <fieldset class="form-group">
            <label for="username" class="col-sm-2 control-label">Username: </label>
            <input name="username" id="username" type="email" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="password" class="col-sm-2 control-label">Password: </label>
            <input name="password" id="password" type="password" required />
        </fieldset>

        <button class="btn btn-primary offset-2">Login</button>
        <a href="/google"><i class="fab fa-google-plus-square fa-3x"></i></a>
        <% if(messages.length > 0) { %>
            <hr />
            <div class="alert alert-warning"><%= messages %></div>
        <% } %>
        <hr />
        Don't have an account yet?  <a href="/register" title="Register">Register</a>
    </form>

<% include shared/footer.ejs %>